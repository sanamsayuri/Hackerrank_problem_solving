#include <bits/stdc++.h>

using namespace std;
 int main(){
 int n,count=0;
 cin>>n;
 int arr[n];
 for(int i=0;i<n;i++){
     cin>>arr[i];
     
 }
 sort(arr,arr+n);
 int max=0;
 for(int i=0;i<n;i++){
     if(arr[i]>max)
     max=arr[i];
 }   
for(int i=0;i<n;i++){
    if(arr[i]==max)
    count++;
}
     cout<<count<<endl;
     
     
     
     return 0;
 }
